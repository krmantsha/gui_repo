#!/bin/sh
if [ "$2" = "1" ]; then
echo " $1" | sed \(aqs/,/, ,/g\(aq   | festival \-\-tts;
else
echo "Event updated, $1" | sed \(aqs/,/, ,/g\(aq   | festival \-\-tts;
fi
.ft P
.fi
